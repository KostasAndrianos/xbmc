include "action_controller.fbs";
include "action_topology.fbs";

namespace KODI.RETRO;

/// @brief A controller used by the player to play the game
table Controller {
  /// @brief The port ID of the controller in the input topology
  port_id:string;
  /// @brief The state of the controller
  state:ControllerState;
}

/// @brief A player in the game
table Player {
  /// @brief The index of the player
  player_index:uint8;
  /// @brief The controllers providing input
  controllers:[Controller];
}

/// @brief The action taken by all players for the frame
table Action {
  /// @brief The input topology
  input_topology:InputTopology;
  /// @brief The player input
  players:[Player];
}
